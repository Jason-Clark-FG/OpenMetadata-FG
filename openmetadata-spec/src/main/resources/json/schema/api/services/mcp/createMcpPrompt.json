{
  "$id": "https://open-metadata.org/schema/api/services/mcp/createMcpPrompt.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CreateMcpPromptRequest",
  "description": "Create MCP Prompt request",
  "type": "object",
  "javaType": "org.openmetadata.schema.api.services.mcp.CreateMcpPromptRequest",
  "javaInterfaces": ["org.openmetadata.schema.CreateEntity"],
  "properties": {
    "name": {
      "description": "Name of the MCP prompt.",
      "$ref": "../../../type/basic.json#/definitions/entityName"
    },
    "displayName": {
      "description": "Display Name that identifies this MCP prompt.",
      "type": "string"
    },
    "description": {
      "description": "Description of the MCP prompt.",
      "$ref": "../../../type/basic.json#/definitions/markdown"
    },
    "service": {
      "description": "Reference to the MCP service that this prompt belongs to.",
      "$ref": "../../../type/basic.json#/definitions/fullyQualifiedEntityName"
    },
    "promptType": {
      "description": "Type of the MCP prompt.",
      "$ref": "../../../entity/services/mcp/mcpPrompt.json#/definitions/mcpPromptType"
    },
    "template": {
      "description": "Template text for the prompt.",
      "type": "string"
    },
    "arguments": {
      "description": "Arguments for the prompt template.",
      "type": "array",
      "items": {
        "$ref": "../../../entity/services/mcp/mcpPrompt.json#/definitions/promptArgument"
      }
    },
    "examples": {
      "description": "Example usages of the prompt.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "description": "Description of the example.",
            "type": "string"
          },
          "arguments": {
            "description": "Example arguments for the prompt.",
            "type": "object"
          },
          "output": {
            "description": "Example output from the prompt.",
            "type": "string"
          }
        }
      }
    },
    "tags": {
      "description": "Tags for this MCP prompt.",
      "type": "array",
      "items": {
        "$ref": "../../../type/tagLabel.json"
      },
      "default": null
    },
    "owners": {
      "description": "Owners of this MCP prompt.",
      "$ref": "../../../type/entityReferenceList.json"
    },
    "domains": {
      "description": "List of fully qualified names of domains the MCP prompt belongs to.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "dataProducts": {
      "description": "List of fully qualified names of data products this entity is part of.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lifeCycle": {
      "description": "Life Cycle properties of the entity.",
      "$ref": "../../../type/lifeCycle.json"
    }
  },
  "required": ["name", "service"],
  "additionalProperties": false
}