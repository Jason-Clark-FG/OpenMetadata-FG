{
  "$id": "https://open-metadata.org/schema/api/services/mcp/createMcpTool.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CreateMcpToolRequest",
  "description": "Create MCP Tool request",
  "type": "object",
  "javaType": "org.openmetadata.schema.api.services.mcp.CreateMcpToolRequest",
  "javaInterfaces": ["org.openmetadata.schema.CreateEntity"],
  "properties": {
    "name": {
      "description": "Name of the MCP tool.",
      "$ref": "../../../type/basic.json#/definitions/entityName"
    },
    "displayName": {
      "description": "Display Name that identifies this MCP tool.",
      "type": "string"
    },
    "description": {
      "description": "Description of the MCP tool.",
      "$ref": "../../../type/basic.json#/definitions/markdown"
    },
    "service": {
      "description": "Reference to the MCP service that this tool belongs to.",
      "$ref": "../../../type/basic.json#/definitions/fullyQualifiedEntityName"
    },
    "toolType": {
      "description": "Type of the MCP tool.",
      "$ref": "../../../entity/services/mcp/mcpTool.json#/definitions/mcpToolType"
    },
    "category": {
      "description": "Category or grouping for the tool.",
      "type": "string"
    },
    "inputSchema": {
      "description": "JSON Schema defining the tool's input parameters.",
      "type": "string"
    },
    "outputSchema": {
      "description": "JSON Schema defining the tool's output format.",
      "type": "string"
    },
    "examples": {
      "description": "Example usages of the tool.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "description": "Description of the example.",
            "type": "string"
          },
          "input": {
            "description": "Example input for the tool.",
            "type": "object"
          },
          "output": {
            "description": "Example output from the tool.",
            "type": "object"
          }
        }
      }
    },
    "tags": {
      "description": "Tags for this MCP tool.",
      "type": "array",
      "items": {
        "$ref": "../../../type/tagLabel.json"
      },
      "default": null
    },
    "owners": {
      "description": "Owners of this MCP tool.",
      "$ref": "../../../type/entityReferenceList.json"
    },
    "domains": {
      "description": "List of fully qualified names of domains the MCP tool belongs to.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "dataProducts": {
      "description": "List of fully qualified names of data products this entity is part of.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lifeCycle": {
      "description": "Life Cycle properties of the entity.",
      "$ref": "../../../type/lifeCycle.json"
    }
  },
  "required": ["name", "service"],
  "additionalProperties": false
}