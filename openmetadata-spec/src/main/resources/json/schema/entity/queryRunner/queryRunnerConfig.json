{
  "$id": "https://open-metadata.org/schema/entity/queryRunner/queryRunnerConfig.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Query Runner Configuration",
  "description": "Collate Query Runner Configuration for database services.",
  "type": "object",
  "javaType": "io.collate.service.schema.entity.queryRunner.QueryRunnerConfig",
  "definitions": {
    "authType": {
      "description": "Authentication type for query runner",
      "type": "string",
      "enum": ["CollateSSO", "ExternalOAuth", "Basic"],
      "default": "CollateSSO"
    },
    "bigQueryAuthType": {
      "description": "Authentication type for BigQuery query runner",
      "type": "string",
      "enum": ["CollateSSO", "Basic"],
      "default": "CollateSSO"
    },
    "bigQueryAuthConfig": {
      "description": "BigQuery admin-level authentication configuration (service-wide settings only)",
      "type": "object",
      "properties": {
        "authType": {
          "$ref": "#/definitions/bigQueryAuthType"
        },
        "projectId": {
          "description": "GCP Project ID for BigQuery",
          "type": "string"
        },
        "defaultDatasetId": {
          "description": "Default dataset ID for queries (admin-defined default)",
          "type": "string"
        },
        "oauthScope": {
          "description": "OAuth Scope for BigQuery",
          "type": "string",
          "default": "https://www.googleapis.com/auth/bigquery"
        }
      },
      "required": ["authType", "projectId"]
    },
    "snowflakeAuthConfig": {
      "description": "Snowflake admin-level authentication configuration (service-wide settings only)",
      "type": "object",
      "properties": {
        "authType": {
          "$ref": "#/definitions/authType"
        },
        "accountUrl": {
          "description": "Snowflake account URL without https:// (e.g., mycompany.snowflakecomputing.com)",
          "type": "string",
          "format": "uri"
        },
        "defaultWarehouse": {
          "description": "Default warehouse name (admin-defined default)",
          "type": "string"
        },
        "defaultDatabase": {
          "description": "Default database name (admin-defined default)",
          "type": "string"
        },
        "defaultSchema": {
          "description": "Default schema name (admin-defined default)",
          "type": "string"
        },
        "defaultRole": {
          "description": "Default role name (admin-defined default)",
          "type": "string"
        }
      },
      "required": ["authType", "accountUrl"]
    }
  },
  "properties": {
    "id": {
      "description": "Unique identifier of this Query Runner Configuration.",
      "$ref": "../../type/basic.json#/definitions/uuid"
    },
    "name": {
      "description": "Name that identifies this Query Runner Configuration.",
      "$ref": "../../type/basic.json#/definitions/entityName"
    },
    "fullyQualifiedName": {
      "description": "FullyQualifiedName same as `name`.",
      "$ref": "../../type/basic.json#/definitions/fullyQualifiedEntityName"
    },
    "displayName": {
      "description": "Display Name that identifies this Query Runner Configuration.",
      "type": "string"
    },
    "description": {
      "description": "Description of the Query Runner Configuration.",
      "$ref": "../../type/basic.json#/definitions/markdown"
    },
    "serviceType": {
      "description": "Database service type (BigQuery or Snowflake).",
      "type": "string",
      "enum": ["BigQuery", "Snowflake"]
    },
    "authConfig": {
      "description": "Authentication configuration for query runner. Structure varies by service type.",
      "oneOf": [
        {
          "$ref": "#/definitions/bigQueryAuthConfig"
        },
        {
          "$ref": "#/definitions/snowflakeAuthConfig"
        }
      ]
    },
    "querySettings": {
      "description": "Query execution settings",
      "type": "object",
      "properties": {
        "maxResultSize": {
          "description": "Maximum result size in count of rows",
          "type": "integer",
          "minimum": 1,
          "maximum": 1000,
          "default": 100
        }
      }
    },
    "enabled": {
      "description": "Whether this query runner config is enabled.",
      "type": "boolean",
      "default": true
    },
    "userConfigurableFields": {
      "description": "Fields that users can configure in their personal QueryRunner settings.",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["username", "password", "role", "database", "schema", "warehouse", "dataset"]
      },
      "default": []
    },
    "updatedAt": {
      "description": "Last update time corresponding to the new version of the entity in Unix epoch time milliseconds.",
      "$ref": "../../type/basic.json#/definitions/timestamp"
    },
    "updatedBy": {
      "description": "User who made the update.",
      "type": "string"
    },
    "deleted": {
      "description": "When `true` indicates the entity has been soft deleted.",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["id", "name", "serviceType", "authConfig", "enabled"],
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "serviceType": {
            "const": "BigQuery"
          }
        }
      },
      "then": {
        "properties": {
          "authConfig": {
            "$ref": "#/definitions/bigQueryAuthConfig"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "serviceType": {
            "const": "Snowflake"
          }
        }
      },
      "then": {
        "properties": {
          "authConfig": {
            "$ref": "#/definitions/snowflakeAuthConfig"
          }
        }
      }
    }
  ]
}