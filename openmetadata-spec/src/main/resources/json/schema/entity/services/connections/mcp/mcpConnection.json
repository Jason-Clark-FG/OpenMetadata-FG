{
  "$id": "https://open-metadata.org/schema/entity/services/connections/mcp/mcpConnection.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "McpConnection",
  "description": "MCP Connection Config",
  "type": "object",
  "javaType": "org.openmetadata.schema.services.connections.mcp.McpConnection",
  "definitions": {
    "mcpType": {
      "description": "Service type.",
      "type": "string",
      "enum": ["Mcp"],
      "default": "Mcp"
    },
    "mcpAuthType": {
      "title": "MCP Authentication Type",
      "description": "Authentication type for MCP Server",
      "type": "object",
      "javaType": "org.openmetadata.schema.services.connections.mcp.McpAuthType",
      "oneOf": [
        {
          "$ref": "../../../../security/noAuth.json"
        },
        {
          "$ref": "../../../../security/apiAccessTokenAuth.json"
        },
        {
          "$ref": "../../../../security/bearerTokenAuth.json"
        },
        {
          "$ref": "../../../../security/customBasicAuth.json"
        }
      ]
    }
  },
  "properties": {
    "type": {
      "description": "Service Type",
      "$ref": "#/definitions/mcpType",
      "default": "Mcp"
    },
    "serverUrl": {
      "description": "MCP Server URL endpoint. Example: mcp://localhost:3000 or https://mcp-server.example.com",
      "type": "string",
      "format": "uri",
      "expose": true
    },
    "protocolVersion": {
      "description": "MCP Protocol version supported by the server",
      "type": "string",
      "default": "2024-11-05"
    },
    "authType": {
      "title": "Authentication Type",
      "description": "Authentication type for the MCP Server",
      "$ref": "#/definitions/mcpAuthType"
    },
    "verifySSL": {
      "description": "Verify SSL certificate for HTTPS connections",
      "type": "boolean",
      "default": true
    },
    "connectionTimeout": {
      "description": "Connection timeout in seconds",
      "type": "integer",
      "default": 30,
      "minimum": 1
    },
    "supportsMetadata": {
      "description": "Pass the metadata source name to the MCP server",
      "type": "boolean",
      "default": true
    },
    "connectionOptions": {
      "$ref": "../../../../configuration/connectionOptions.json"
    },
    "connectionArguments": {
      "$ref": "../../../../configuration/connectionArguments.json"
    }
  },
  "additionalProperties": false,
  "required": ["serverUrl"]
}