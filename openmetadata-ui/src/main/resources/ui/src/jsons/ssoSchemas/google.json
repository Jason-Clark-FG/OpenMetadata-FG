{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Google SSO Configuration",
  "description": "Google SSO configuration schema for OpenMetadata",
  "type": "object",
  "properties": {
    "provider": {
      "title": "SSO Provider",
      "description": "Select the SSO provider to configure",
      "type": "string",
      "enum": [
        "Google",
        "Auth0",
        "Azure",
        "Okta",
        "CustomOidc",
        "Saml",
        "Basic"
      ],
      "default": "Google"
    },
    "secretKey": {
      "title": "Secret Key",
      "description": "Google SSO client secret key path or contents",
      "type": "string",
      "format": "password",
      "minLength": 1
    },
    "audience": {
      "title": "Audience",
      "description": "Google SSO audience URL",
      "type": "string",
      "default": "https://www.googleapis.com/oauth2/v4/token"
    }
  },
  "required": ["provider", "secretKey", "audience"],
  "additionalProperties": false
}
