{
  "$id": "SmartStartAppConfig.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SmartStartAppConfig",
  "description": "Configuration for the Smart Start Application.",
  "type": "object",
  "definitions": {
    "smartStartAppType": {
      "description": "Application type.",
      "type": "string",
      "enum": ["SmartStartApplication"],
      "default": "SmartStartApplication"
    }
  },
  "properties": {
    "type": {
      "title": "Application Type",
      "description": "Application Type",
      "$ref": "#/definitions/smartStartAppType",
      "default": "SmartStartApplication"
    },
    "active": {
      "title": "Active",
      "description": "Whether the Smart Start Workflow should be active or not.",
      "type": "boolean",
      "default": true
    },
    "entityLink": {
      "title": "Service Entity Link",
      "description": "Service Entity Link for which to trigger the application.",
      "type": "string",
      "pattern": "(?U)^<#E::\\w+::(?:[^:<>|]|:[^:<>|])+(?:::(?:[^:<>|]|:[^:<>|])+)*>$"
    }
  },
  "additionalProperties": false,
  "required": ["active"]
}
